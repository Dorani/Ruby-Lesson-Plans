<h1 align="center">Listing all articles</h1>




  <% @articles.each do |articles| %>
  <div class="card">
    <div class="card-header">
      Article ID: <%= articles.id %>
    </div>
    <div class="card-body">
      <h5 class="card-title">Title: <%= link_to articles.title, article_path(articles) %></h5>
      <h5 class="card-text">Description: <p><%= simple_format(articles.description) %></p></h5>

      <div class="article-meta-details">
        <small>
          Created By:   <%= articles.user.username if articles.user %>,
          Created At:   <%= time_ago_in_words(articles.created_at)  %> ago,
          Last Updated: <%= time_ago_in_words(articles.updated_at) %> ago
        </small>
      </div>

      <div class="article-actions">
        <%= link_to "Edit this Article", edit_article_path(articles), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete Article", article_path(articles), method: :delete,
            data: {confirm: "Are you sure you want to delete?"},
            class: "btn btn-xs btn-danger" %>
     </div>


    </div>
  </div>
  <% end %>
